<div class="row">
  <div class="box">
    <div class="box-header bg-success">
      <h3 class="box-title text-light d-flex justify-content-center">
        Ecommerce Chat
      </h3>
    </div>
    <div class="box-body">
      <div class="chat-messages">
        <div id="messages"></div>
      </div>
    </div>
    <div>
      <form
        id="Messager"
        class="d-flex flex-column justify-content-center align-items-center p-2"
      >
        <input
          type="email"
          id="email"
          placeholder="Input Email"
          class="form-control"
          required
        />
        <input
          type="text"
          id="text"
          placeholder="Message"
          class="form-control"
          required
        />
        <span class="input-group-btn">
          <input type="submit" class="btn btn-success mt-1" />
        </span>
      </form>
    </div>
  </div>
</div>
